
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="card">
        <div class="card-body">
            <div class="card-title" style="color:#280b70">Kişi Ekleme Sayfası</div>
            <hr>
            <form action="/Person/Create" method="post">
                <div class="form-group">
                    <label for="input-1">Ad Soyad</label>
                    <input type="text" class="form-control" id="input-1" name="NameSurname" placeholder="Ad Soyad Giriniz..." maxlength="50" required>
                </div>
                <div class="form-group">
                    <label for="input-2">Code</label>
                    <input type="text" class="form-control" id="input-2" name="Code" placeholder="Code..." required>
                </div>
                <div class="form-group">
                    <label for="input-3">Şifre</label>
                    <input type="password" class="form-control" id="input-3" name="Password" placeholder="Şifre Giriniz" maxlength="20" required>
                </div>

                <label for="input-3">Admin mi?</label>
                <div class="icheck-material-primary icheck-inline">

                    <input type="radio" id="Id_1" name="Answer_1" value="@Survey_System.Constants.AnswerType.Yes" />
                    <label for="Id_1">@Survey_System.Constants.AnswerType.Yes</label>

                    <input type="radio" id="Id_2" name="Answer_1" value="@Survey_System.Constants.AnswerType.No" checked>
                    <label for="Id_2">@Survey_System.Constants.AnswerType.No</label>
                </div>


                <div class="form-group">
                    @Html.ActionLink("Listeye Geri Dön", "Index", null, new { @class = "btn btn-warning btn btn-round" })
                    <button type="submit" class="btn btn-round btn-success shadow-primary px-5"><i class="icon-lock"></i>Kaydet</button>

                </div>
            </form>
         
        </div>
    </div>

